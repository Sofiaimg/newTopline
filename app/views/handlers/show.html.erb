<p id="notice"><%= notice %></p>
<hr>

<div class="row">
  <div class="col-sm-2">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Handler Details</h5>
        <hr>
        <p class="card-text">
          <img class="card-img-top img-fluid" src="<%= @handler.avatar %>" alt="Card image cap">
          <p> <strong>Supplier:</strong> <%= @handler.supplier.name %> </p>
          <p> <strong>Supplier alias:</strong> <%= @handler.supplier.alias %> </p>
          <p> <strong>Name:</strong> <%= @handler.name %> </p>
          <p> <strong>Email:</strong> <%= @handler.email %> </p>
        </p>
        <a href="<%= handlers_path %>" class="btn btn-outline-secondary btn-sm">Back to All Handlers</a>
      </div>
    </div>
  </div>
  <div class="col-sm-10">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Orders: <%= @handler.name %>  |  |  | </h5>
        <hr>
        <p class="card-text">
          <table class="table table-striped table-bordered table-hover table-sm " id="myTable">
            <thead>
              <tr>
                <th>Proforma</th>
                <th>Quotation nÂ°</th>
                <th>Season</th>
                <th>Supplier</th>
                <th>Handler</th>
                <th>Seller</th>
                <th>Client</th>
                <th>Payment term</th>
                <th>Payment term</th>
                <th>Status</th>
                <th>Link</th>
              </tr>
            </thead>
            <tbody>

          <% @orders_by_handler.each do |quotation| %>
              <tr>
                <td><%= quotation.id %></td>
                <td><%= quotation.proforma %></td>
                <td><%= quotation.season.name %></td>
                <td><%= quotation.supplier.name %></td>
                <td><%= quotation.handler.name %></td>
                <td><%= quotation.seller.name %></td>
                <td><%= quotation.client.name %></td>
                <td><%= quotation.payment_term.clause %></td>
                <td><%= quotation.payment_term.conditions %></td>
                <td><%= quotation.status? ? "Confirmed":"Pending" %></td>
                <td><%= link_to "See Order details", "#", class: "btn"%></td>
              </tr>
          <%end%>
            </tbody>
          </table>
        </p>
        <a href="<%= orders_path %>" class="btn btn-outline-secondary btn-sm">Go back to All Orders</a>
      </div>
    </div>
  </div>
</div>
