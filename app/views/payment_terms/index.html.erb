<p id="notice"><%= notice %></p>

<h1>Payment Terms</h1>

<div class="row">
  <div class="offset-md-3 col-md-6">
    <table class="table table-striped table-bordered table-hover table-sm text-center" id="myTable">
      <thead>
          <tr>
            <th>Clause</th>
            <th>Conditions</th>
          </tr>
        </thead>

        <tbody>
          <% @payment_terms.each do |payment_term| %>
            <tr>
              <td><%= payment_term.clause %></td>
              <td><%= payment_term.conditions %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>
