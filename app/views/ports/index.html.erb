<p id="notice"><%= notice %></p>

<h1>Ports</h1>
<div class="row">
  <div class="offset-md-3 col-md-6">
    <table class="table table-striped table-bordered table-hover table-sm text-center" id="myTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Country</th>
        </tr>
      </thead>

      <tbody>
        <% @ports.each do |port| %>
          <tr>
            <td><%= port.name %></td>
            <td><%= port.country %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>
