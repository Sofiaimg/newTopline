  <tbody>
    <% @quotation_details.each do |quotation_detail| %>
      <tr>
        <td><%= quotation_detail.quotation.id %></td>
        <td><%= quotation_detail.id %></td>
        <td><%= quotation_detail.brand.name %></td>
        <td><%= quotation_detail.product.description %></td>
        <td><%= quotation_detail.style %></td>
        <td><%= quotation_detail.color.name %></td>
        <td><%= quotation_detail.quantity %></td>
        <td><%= quotation_detail.size.name %></td>
        <td><%= quotation_detail.ratio %></td>
        <td><%= quotation_detail.delivery_date %></td>
        <td><%= quotation_detail.target_price %></td>
