<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table table-striped table-bordered table-hover table-sm " id="myTable">

  <thead>
    <tr>
      <th>Category</th>
      <th>Photo</th>
      <th>Description</th>
      <th>Finish</th>
      <th>Composition</th>
      <th>Construction</th>
      <th>Fit</th>
      <th>Placket</th>
      <th>Pocket</th>
      <th>Washing</th>
      <th>Other details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.category %></td>
        <td><%= product.photo %></td>
        <td><%= product.description %></td>
        <td><%= product.finish %></td>
        <td><%= product.composition %></td>
        <td><%= product.construction %></td>
        <td><%= product.fit %></td>
        <td><%= product.placket %></td>
        <td><%= product.pocket %></td>
        <td><%= product.washing %></td>
        <td><%= product.other_details %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

